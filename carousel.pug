html(lang='en')
  head
  body
    | Bootstrap 5 Carousels
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Document
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL' crossorigin='anonymous')
    // Making Carousels!
    #demo.carousel.slide(data-bs-ride='carousel')
      // Arrows
      .carousel-indicators
        button.active(type='button' data-bs-target='#demo' data-bs-slide-to='0')
        button(type='button' data-bs-target='#demo' data-bs-slide-to='1')
        button(type='button' data-bs-target='#demo' data-bs-slide-to='2')

      // Carousel
      .carousel-inner
        .carousel-item.active
          img.d-block.w-100(src='https://www.w3schools.com/bootstrap5/la.jpg' alt='Los Angeles')
        .carousel-item
          img.d-block.w-100(src='https://www.w3schools.com/bootstrap5/chicago.jpg' alt='Chicago')
        .carousel-item
          img.d-block.w-100(src='https://www.w3schools.com/bootstrap5/ny.jpg' alt='New York')
          
      // Icons to Move L/R
      button.carousel-control-prev(type='button' data-bs-target='#demo' data-bs-slide='prev')
        span.carousel-control-prev-icon
      button.carousel-control-next(type='button' data-bs-target='#demo' data-bs-slide='next')
        span.carousel-control-next-icon
